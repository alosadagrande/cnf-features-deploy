{{ $firstNode := index .Data.Nodes 0}}
{{ if $firstNode.DiskPartition -}}
{{- "# Automatically generated by extra-manifests-builder" }}
{{ "# Do not make changes directly." }}
apiVersion: machineconfiguration.openshift.io/v1
kind: MachineConfig
metadata:
  name: 98-var-imageregistry-partition-{{ $.Role }}
  labels:
    machineconfiguration.openshift.io/role: {{ $.Role }}
spec:
  config:
    ignition:
      version: 3.2.0
    storage:
      disks:
      {{- range $firstNode.DiskPartition }}
        - device: {{ .Device }}
          wipeTable: false
          partitions:
          {{- range .Partitions }}
            - sizeMiB: {{ .Size }}
              startMiB: {{ .Start }}
              label: {{ .Label }}
          {{- end }}
      {{- end }}
      filesystems:
      {{- range $firstNode.DiskPartition }}
      {{- range .Partitions }}
        - path: {{ .MountPoint }}
          device: /dev/disk/by-partlabel/{{ .Label }}
          format: {{ .FileSystemFormat }}
      {{- end }}
      {{- end }}
    systemd:
      units:
      {{- range $firstNode.DiskPartition }}
      {{- range .Partitions }}
        - name: {{ .MountFileName }}
          enabled: true
          contents: |
            [Unit]
            Before=local-fs.target
            [Mount]
            Where={{ .MountPoint }}
            What=/dev/disk/by-partlabel/{{ .Label }}
            [Install]
            WantedBy=local-fs.target
      {{- end }}
      {{- end }}
{{ end -}}
